<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_resultat_recherche"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ihm.ihm.Resultat_recherche"
    tools:showIn="@layout/app_bar_artiste">







    <ListView
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:id="@+id/liste_resultats_france"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_below="@+id/textView31" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_header_region"
        android:layout_above="@+id/liste_resultats_region"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sevran"
        android:adjustViewBounds="true"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:id="@+id/imageView3"
        android:layout_above="@+id/textView25" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:id="@+id/liste_resultats_region"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="Suivre l'artiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_header_france"
        android:layout_above="@+id/liste_resultats_france"
        android:layout_alignParentStart="true" />

</RelativeLayout>
